//Classic struct with named field
struct Student { name: String, level: u8, remote: bool }

//Tuple struct with data types only
struct grades (char, char, char, char, f32);

//Unit struct
struct unit; 

//Instantiate classic struct, specify fields in random order or in specified order
let user_1= Student { name: String:: from("Steve Wong"), remmote: true, level: 2 }; 
let user_2= Student { name: String:: from("Nancy Lee"), level 7, remote: false}; 

//instantiate tuple structs, pass values in the same order as type defined
//mark_1, mark_1.0 = A, mark_1.2 = A, mark_1.3 = A, mark_1.4 = A
let mark_1 = Grades ('A', 'A', 'A', 'A', 4.00);
let mark_2 = Grades ('B', 'A', 'A', 'C', 3.25); 
